{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ fa('terminal') }} Administration</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if linkList is not empty %}
                <table class="table table-hover">
                    <tr>
                        <th>Lien</th>
                        <th>URL</th>
                        <th>User</th>
                        <th></th>
                    </tr>
                    {% for link in linkList %}
                        <tr>
                            <td>{{ url('ag_shortener_redirect', { token: link.token }) }}</td>
                            <td>{{ link.url }}</td>
                            <td>{{ link.user is not null ? link.user.username : 'Unknown' }}</td>
                            <td>
                                <div class="pull-right">
                                    <a href="#" class="btn btn-xs btn-info">Voir d√©tails</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}