{% extends '::base.html.twig' %}

{% block navbar %}{% endblock %}

{% block body %}
	<div class="row text-justify">
		<div class="col-md-5 center-block" style="float: none;">
			<h2 class="text-center">{{ fa('sign-in') }} Se connecter</h2>
			<hr/>
			{% if error %}
				<div class="alert alert-danger">{{ error.message|trans({}, 'FOSUserBundle') }}</div>
			{% endif %}
			<form action="{{ path("fos_user_security_check") }}" method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				<div class="form-group">
					<label for="username">E-mail / {{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
					<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus />
				</div>
				<div class="form-group">
					<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
					<input class="form-control" type="password" id="password" name="_password" required="required" />
				</div>
				<div class="checkbox">
					<label for="remember_me">
						<input type="checkbox" id="remember_me" name="_remember_me" />
						{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
					</label>
				</div>
				<div class="form-group">
					<input class="btn btn-primary pull-right" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
				</div>
			</form>
			<div class="row">
				<div class="col-xs-12">
					<hr>
					<div class="row">
						<div class="col-xs-6 text-center">
							<a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">{{ fa('user-plus') }} Créer un compte</a>
						</div>
						<div class="col-xs-6 text-center">
							<a href="{{ path('fos_user_resetting_request') }}" class="btn btn-default">{{ fa('lock') }} Mot de passe oublié</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}