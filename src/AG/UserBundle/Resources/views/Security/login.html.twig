{% extends '::base.html.twig' %}

{% block navbar %}{% endblock %}

{% block body %}
	<div class="row text-justify">
		<div class="col-md-5 center-block" style="float: none;">
			<h2 class="text-center">{{ fa('sign-in') }} Se connecter</h2>
			<hr/>
			{% if error %}
				<div class="alert alert-danger">{{ error.message|trans({}, 'FOSUserBundle') }}</div>
			{% endif %}
			<form action="{{ path("fos_user_security_check") }}" method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				<div class="form-group">
					<label for="username">E-mail / {{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
					<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus />
				</div>
				<a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Mot de passe oublié</a>
				<div class="form-group">
					<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
					<input class="form-control" type="password" id="password" name="_password" required="required" />
				</div>
				<div class="checkbox">
					<label for="remember_me">
						<input type="checkbox" id="remember_me" name="_remember_me" />
						{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
					</label>
				</div>
				<div class="form-group">
					<input class="btn btn-primary pull-right" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
				</div>
			</form>
			<div class="row">
				<div class="col-xs-12">
					<h5 class="text-center">
						<a href="{{ path('fos_user_registration_register') }}">Créer un compte</a>
					</h5>
				</div>
			</div>
		</div>
		{#<div class="col-md-6">#}
			{#<h2>{{ fa(icon) }} Raccourcir URLs</h2>#}
			{#<hr>#}
			{#<p>En créant un compte, vous accèdez aux fonctionnalités suivantes :</p>#}
			{#<ul>#}
				{#<li>Garder une trace de vos URLs</li>#}
				{#<li>Savoir combien de fois vos URLs ont été visités</li>#}
				{#<li>Envoyer vos URLs par e-mail</li>#}
			{#</ul>#}
		{#</div>#}
	</div>
{% endblock %}