{% extends "AGUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
    <li class="active">Changer mon mot de passe</li>
{% endblock %}

{% block ag_user_content  %}
    <div class="row">
	    <div class="col-sm-1 text-center hidden-xs" style="padding-top: 22px;">
		    <a href="{{ path('fos_user_profile_show') }}">
			    {{ fa('reply fa-2x') }}
		    </a>
	    </div>
	    <div class="col-sm-11">
		    <h2>{{ fa('lock') }} Changer mon mot de passe</h2>
	    </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6 col-xs-10 center-block" style="float: none;">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                {{ form_widget(form) }}
                {{ form_rest(form) }}
                <div>
                    <input class="btn btn-default pull-right" type="submit" value="{{ 'change_password.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
{% endblock %}
