{% extends "AGUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block ag_user_content  %}
    <div class="row">
	    <div class="col-sm-1 text-center hidden-xs" style="padding-top: 22px;">
		    <a href="{{ path('fos_user_profile_show') }}">
			    {{ fa('reply fa-2x') }}
		    </a>
	    </div>
	    <div class="col-sm-11">
		    <h2>{{ fa('lock') }} Change password</h2>
	    </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-xs-10 center-block nfloat">
            {#{% form_theme form 'bootstrap_3_layout.html.twig' %}#}
	        {#{{ form(form) }}#}
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                <div class="form-group">
                    {{ form_label(form.current_password) }} :
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, {'attr' : {'class': 'form-control', 'autofocus': 'on'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.new.first, "Nouveau mot de passe") }} :
                    {{ form_errors(form.new.first) }}
                    {{ form_widget(form.new.first, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.new.second, "VÃ©rification") }} :
                    {{ form_errors(form.new.second) }}
                    {{ form_widget(form.new.second, {'attr' : {'class': 'form-control'}}) }}
                </div>
                {{ form_rest(form) }}
                <div>
                    <input class="btn btn-default pull-right" type="submit" value="{{ 'change_password.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
{% endblock %}
