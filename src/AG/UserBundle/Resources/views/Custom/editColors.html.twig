{% extends "@AGUser/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
    <li class="active">Editer mes couleurs</li>
{% endblock %}


{% block ag_user_content %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ fa('edit') }} Couleurs QR Code</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form(form) }}
        </div>
        <div class="col-md-6">
            <h5>{{ fa('eye') }} Aperçu</h5>
            <hr>
            <img src="{{ qrcode_data_uri('aperçu', foreground_color=hex_to_rgb(app.user.foregroundColor|default('#000000')), background_color=hex_to_rgb(app.user.backgroundColor|default('#ffffff'))) }}" alt="QR" class="img-responsive img-thumbnail">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jscolor.min.js') }}"></script>
{% endblock %}
